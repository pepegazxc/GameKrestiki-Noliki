import java.awt.*;
import java.util.Scanner;
import java.util.Random;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Random rand = new Random();

        //Создаем переменные которые будут обозначать кол-во клеточек поля
        int pole3x3 = 3;
        int pole6x6 = 6;
        int pole9x9 = 9;
        int pole12x12 = 12;

        // Выбор размера поля (3x3, 6x6, 9x9, 12x12)

        System.out.print("Выберите размер поля (цифра 1 - 3х3, 2 - 6х6, 3 - 9х9 4 - 11х11):   ");
        int areasize = sc.nextInt();
        //В зависимости от выбора цифры будет сгенерированы поля с соответственными размерами в виде двумерного массива
        switch (areasize) {
            case 1:
            char[][] arr = new char[3][3];
            for (int i = 0; i < arr.length; i++) {
                for (int j = 0; j < arr.length; j++) {
                    System.out.print("|");
                    System.out.print(arr[i][j] == ' ' ? " " : arr[i][j]);
                    if (j < arr[i].length - 1) {
                    }
                }
                System.out.print("|");
                System.out.println();
                if (i < arr.length - 1) {
                    System.out.println("-------");
                }
            }
            break;

            case 2:
            arr = new char[6][6];
                for (int i = 0; i < arr.length; i++) {
                    for (int j = 0; j < arr.length; j++) {
                        System.out.print("|");
                        System.out.print(arr[i][j] == ' ' ? " " : arr[i][j]);
                        if (j < arr[i].length - 1) {
                        }
                    }
                    System.out.print("|");
                    System.out.println();
                    if (i < arr.length - 1) {
                        System.out.println("-------------");
                    }
                }
                break;

            case 3:
            arr = new char[9][9];
                for (int i = 0; i < arr.length; i++) {
                    for (int j = 0; j < arr.length; j++) {
                        System.out.print("|");
                        System.out.print(arr[i][j] == ' ' ? " " : arr[i][j]);
                        if (j < arr[i].length - 1) {
                        }
                    }
                    System.out.print("|");
                    System.out.println();
                    if (i < arr.length - 1) {
                        System.out.println("-------------------");
                    }
                }
                break;

            case 4:
             arr = new char[11][11];
                for (int i = 0; i < arr.length; i++) {
                    for (int j = 0; j < arr.length; j++) {
                        System.out.print("|");
                        System.out.print(arr[i][j] == ' ' ? " " : arr[i][j]);
                        if (j < arr[i].length - 1) {
                        }
                    }
                    System.out.print("|");
                    System.out.println();
                    if (i < arr.length - 1) {
                        System.out.println("-----------------------");
                    }
                }
                break;

            default:
                System.out.println("Вы ввели неверную цифру");
            }

    }

}
